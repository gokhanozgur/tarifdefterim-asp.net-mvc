
@{
    ViewBag.Title = "UpdateUser";
    Layout = "~/Areas/Admin/Views/Shared/_panelLayout.cshtml";
}

@model TarifDefterim.UI.Areas.Admin.Models.DTO.AppUserDTO

<!-- BEGIN PAGE HEADER-->
<!-- BEGIN PAGE TITLE-->
<h1 class="page-title">
    Kullanıcı Güncelleme Formu
    <small>Kullanıcılar</small>
</h1>
<!-- END PAGE TITLE-->
<!-- END PAGE HEADER-->
<div class="note note-info">
    <p> Bu sayfada <b>@Model.Name @Model.LastName</b> kullanıcısının mevcut bilgilerini güncelleyebilirsiniz. </p>
</div>

@Html.Partial("_messages")

<div class="row">
    <div class="col-md-12">

        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-green-haze">
                    <i class="icon-user-follow font-green-haze"></i>
                    <span class="caption-subject bold uppercase"> Kullanıcı Güncelleme Formu</span>
                </div>
                <div class="actions">
                    <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form action="/Admin/AppUser/UpdateUser" method="post" role="form" class="form-horizontal" enctype="multipart/form-data">
                    <div class="form-body">

                        <div class="form-group form-md-line-input">
                            <label class="col-md-2 control-label" for="Name">Ad</label>
                            <div class="col-md-4">
                                <input type="text" name="Name" class="form-control" id="Name" placeholder="Ad giriniz" value="@Model.Name"/>
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>

                        <div class="form-group form-md-line-input">
                            <label class="col-md-2 control-label" for="LastName">Soyad</label>
                            <div class="col-md-4">
                                <input type="text" name="LastName" class="form-control" id="LastName" placeholder="Soyad giriniz" value="@Model.LastName"/>
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>

                        <div class="form-group form-md-line-input">
                            <label class="col-md-2 control-label" for="UserName">Kullanıcı Adı</label>
                            <div class="col-md-4">
                                <input type="text" name="UserName" class="form-control" id="UserName" placeholder="Kullanıcı adı giriniz" value="@Model.UserName"/>
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>

                        <div class="form-group form-md-line-input">
                            <label class="col-md-2 control-label" for="Email">E-mail</label>
                            <div class="col-md-4">
                                <input type="email" name="Email" class="form-control" id="Email" placeholder="E-mail giriniz" value="@Model.Email"/>
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>

                        <div class="form-group form-md-line-input">
                            <label class="col-md-2 control-label" for="Address">Adres</label>
                            <div class="col-md-6">
                                <textarea type="text" name="Address" class="form-control" id="Address" placeholder="Adres giriniz">@Model.Address</textarea>
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>

                        <div class="form-group form-md-line-input">
                            <label class="col-md-2 control-label" for="PhoneNumber">Cep Telefonu Nu.</label>
                            <div class="col-md-4">
                                <input type="text" name="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Örn:5391234567" value="@Model.PhoneNumber"/>
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>

                        <div class="form-group form-md-line-input">
                            <label class="col-md-2 control-label" for="BirthDate">Doğum Tarihi</label>
                            <div class="col-md-2">
                                <input type="date" name="BirthDate" class="form-control" id="BirthDate" value="@Model.Birthdate">
                                <div class="form-control-focus"> </div>
                                <small>@Model.Birthdate</small>
                            </div>
                        </div>

                        <div class="form-group form-md-line-input">
                            <label class="col-md-2 control-label" for="Image">Kullanıcı Resmi</label>
                            <div class="col-md-2">
                                <input type="file" name="Image" class="form-control" id="Image" placeholder="Resim seçiniz..." />
                                <div class="form-control-focus"> </div>
                            </div>
                        </div>

                        <div class="form-group form-md-line-input">
                            <label class="col-md-2 control-label" for="Role">Rol</label>
                            <div class="col-md-2">                                

                                @Html.EnumDropDownListFor(x => x.Role,new { @class = "form-control"})

                                <div class="form-control-focus"> </div>
                            </div>
                        </div>

                        <div class="form-group form-md-line-input">
                            <label class="col-md-2 control-label" for="Status">Durum</label>
                            <div class="col-md-2">

                                @Html.EnumDropDownListFor(x => x.Status, new { @class = "form-control" })

                                <div class="form-control-focus"> </div>
                            </div>
                        </div>

                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="hidden" name="ID" value="@Model.ID" />
                                <a href="/Admin/AppUser/AppUserList" class="btn blue btn-outline">Geri</a>
                                <button type="submit" class="btn green btn-outline">Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>