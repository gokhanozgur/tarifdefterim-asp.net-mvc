        //        return false;

        //    }

        //    return true;

        //}

        $("#loginform").submit(function (e) {    
            e.preventDefault();


            var user = $("#User").val();
            var pass = $("#Password").val();

            if (user != "" || pass != "") {
                $.ajax({
                    url: "http://localhost:59286/api/Auth/Login",
                    type: "POST",
                    data: $("#loginform").serialize(),
                    success: function (response) {
                        if (response.Success) {
                            window.location.href = response.RedirectUrl;
                        }
                    },
                    error: function (err) {
                        console.log(err);
                        if (err.status == 400) {
                            $("#messageText").removeAttr("style");
                            $("#message").html("");
                            $("#message").append("Girilen bilgilere ait kullanıcı bulunmamaktadır.");

                            $(document).ajaxComplete(function () {
                                $("#wait").css("display", "none");
                                $("#loginbutton").removeAttr("style");
                                $("#forget-password").removeAttr("style");
                            });
                        }
                    }
                })
            }
            else {
                $("#messageText").removeAttr("style");
                $("#message").html("");
                $("#message").append("Giriş bilgilerini doldurunuz.");
            }
        });

    </script>
