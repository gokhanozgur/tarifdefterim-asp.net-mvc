    <script>

        var passMatch = 0;
        var checkEmail = 0;
        var checkUserName = 0;

        $(document).ready(function () {

            $("#userregister").submit(function (e) {
                e.preventDefault();

                if (passMatch == 0 || checkEmail == 0 || checkUserName ==0) {
                    $("#registerbutton").prop("disabled", true);
                }
                else {
                    $("#registerbutton").prop("disabled", false);
                }

                $("#registerbutton").prop("disabled", true);
            });

            $("#Re-Password").change(function () {

                var p1 = $("#Password").val();
                var p2 = $("#Re-Password").val();

                if (p1 == p2) {
                    $("#registerbutton").prop("disabled", false);
                    $("#passwordmachmessage").css("display", "none");
                    passMatch = 1;
                }
                else {
                    //$("#registerbutton").prop("disabled", true);

                    $("#passwordmachmessage").removeAttr("style");
                    $("#passwordmachmessage").text("Şifre alanları birbiriyle aynı olmalıdır.");
                    passMatch = 0;

                }
                

            });

            $("#UserName").change(function () {

                var username = $("#UserName").val();

                $.ajax({

                    url:"@Url.Action("CheckUserNameFromRegisterForm", "Home")",
                    type: "POST",
                    datatype: "Json",
                    data: { username: username },
                    success: function (data) {

                        if (data == false) {

                            $("#userinputessage").removeAttr("style");
                            //$("#userinputessage").text("Bu isim kullanıma uygundur.");
                            $("#userinputessage").html("");
                            passMatch = 1;

                        }
                        else {

                            $("#userinputessage").removeAttr("style");
                            $("#userinputessage").text("Bu isim daha önce alınmıştır.").fadeIn(3000);
                            passMatch = 0;

                        }

                    }

                });

            });


            $("#Email").change(function () {

                var email = $("#Email").val();

                $.ajax({

                    url:"@Url.Action("CheckEMailFromRegisterForm", "Home")",
                    type: "POST",
                    datatype: "Json",
                    data: { email: email },
                    success: function (data) {

                        if (data == false) {

                            $("#emailinputmessage").removeAttr("style");
                            //$("#emailinputmessage").text("Bu mail kullanıma uygundur.");
                            $("#emailinputmessage").html("");
                            passMatch = 1;

                        }
                        else {

                            $("#emailinputmessage").removeAttr("style");
                            $("#emailinputmessage").text("Bu mail daha önce alınmıştır.").fadeIn(3000);
                            passMatch = 0;
                        }

                    }

                });

            });

        });

    </script>
