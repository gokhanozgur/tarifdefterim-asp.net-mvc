<!-- Sidebar
    ================================================== -->
<div class="four columns">
    <!-- Search Form -->
    <div class="widget search-form">
        <nav class="search">
            <form action="#" method="get">
                <button><i class="fa fa-search"></i></button>
                <input class="search-field" type="text" placeholder="Search for recipes" value="" />
            </form>
        </nav>
        <div class="clearfix"></div>
    </div>

    <!-- Popular Recipes -->
    <div class="widget">
        <h4 class="headline">Popüler Tarifler</h4>
        <span class="line margin-bottom-30"></span>
        <div class="clearfix"></div>


        @model IEnumerable<TarifDefterim.UI.Models.VM.MealVM>

        @foreach (var item in Model)
        {
            <a href="/Recipe/RecipeDetail/@item.Slug" class="featured-recipe">
                <img src="@item.RandomImagePath" alt="">
                <div class="featured-recipe-content">
                    <h4>@item.Name</h4>
                </div>
                <div class="post-icon"></div>
            </a>
        }

        <div class="clearfix"></div>
    </div>
</div>
